<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrimeCut" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vividBlue</item>
        <item name="colorPrimaryVariant">@color/midnightBlue</item>
        <item name="colorOnPrimary">@color/offWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vividBlue</item>
        <item name="colorSecondaryVariant">@color/midnightBlue</item>
        <item name="colorOnSecondary">@color/offWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/midnightBlue</item>
        <item name="colorSurface">@color/midnightBlue</item>
        <item name="colorOnSurface">@color/offWhite</item>
    </style>

    <style name="Widget.PrimeCut.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/vividBlue</item>
        <item name="hintTextColor">@color/offWhite</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textColorHint">@color/offWhite</item>
        <item name="boxBackgroundColor">@color/darkCharcoal</item>
    </style>

    <style name="Widget.PrimeCut.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textColorHint">@color/slateGray</item>
    </style>

    <style name="Theme.PrimeCut.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textInputStyle">@style/Widget.PrimeCut.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.PrimeCut.EditText</item>
    </style>

    <style name="Theme.PrimeCut.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.PrimeCut.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>